<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SelectDirPath"
    xmlns:nodify="https://miroiu.github.io/nodify">

    <DataTemplate DataType="{x:Type local:SelectedDirNodeViewModel}">
        <nodify:Node
            Content="{Binding}"
            Header="{Binding Title}"
            Input="{Binding Input}"
            Output="{Binding Output}">

            <nodify:Node.ContentTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBox
                            MinWidth="100"
                            MaxWidth="120"
                            Text="{Binding DirecotryPath}"
                            ToolTip="{Binding DirecotryPath}" />
                        <Button
                            Command="{Binding SelectDirPathCommand}"
                            Content="{StaticResource EditIcon}"
                            Style="{StaticResource IconButton}" />
                    </StackPanel>
                </DataTemplate>
            </nodify:Node.ContentTemplate>
        </nodify:Node>
    </DataTemplate>
</ResourceDictionary>