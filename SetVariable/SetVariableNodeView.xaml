<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SetVariable"
    xmlns:nodify="https://miroiu.github.io/nodify"
    xmlns:shared="clr-namespace:Nodify;assembly=Nodify.Shared"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--  定义节点的属性模板  -->
    <DataTemplate DataType="{x:Type local:PropertySettingsViewModel}">
        <local:PropertySettings DataContext="{Binding Node}" />
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:SetVariableNodeViewModel}">
        <nodify:Node
            Content="{Binding}"
            Footer="{Binding}"
            Header="{Binding}"
            Input="{Binding Input}"
            Output="{Binding Output}">
            <nodify:Node.HeaderTemplate>
                <StaticResource ResourceKey="SharedHeaderTemplate" />
            </nodify:Node.HeaderTemplate>
            <nodify:Node.FooterTemplate>
                <StaticResource ResourceKey="SharedFooterTemplate" />
            </nodify:Node.FooterTemplate>
            <nodify:Node.ContentTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <ComboBox
                            Width="100"
                            DisplayMemberPath="Title"
                            ItemsSource="{Binding Graph.EditorManager.Editors}"
                            SelectedItem="{Binding Editor, Mode=TwoWay}" />
                        <ComboBox
                            Width="100"
                            DisplayMemberPath="Name"
                            ItemsSource="{Binding Editor.Variables}"
                            SelectedItem="{Binding SelectedVariable, Mode=TwoWay}" />
                        <DockPanel>
                            <TextBlock Text="如果不存在，是否自动创建:" />
                            <CheckBox IsChecked="{Binding IsAutoCreateIfNotExist, Mode=OneWayToSource}" />
                        </DockPanel>
                        <TextBox Width="100" Text="{Binding StrValue, Mode=TwoWay}" />

                    </StackPanel>
                </DataTemplate>
            </nodify:Node.ContentTemplate>
        </nodify:Node>
    </DataTemplate>
</ResourceDictionary>